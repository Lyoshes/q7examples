------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac
Entry-Name: .content
Content-Type: text/ecl

get-view "Script Explorer" | get-tree | select "javascript.project/testfolder/testfile.js" | double-click
with [get-editor "testfile.js"] {
    with [get-text-viewer] {
        set-caret-pos 14 1
        type-text "var i = 0;"
        key-type "M1+s"
    }
    get-left-ruler | hover-ruler -line 14
}
get-window -from "Information Window" | get-editbox | get-property text | equals "Variable i is never used" 
    | verify-true
with [get-view Problems | get-tree] {
    get-property itemCount | equals 1 | verify-true
    get-item "Warnings \\(1 item\\)" | get-property caption | equals "Warnings (1 item)" | verify-true
    get-item "Warnings \\(1 item\\)" | get-property childCount | equals 1 | verify-true
    get-item "Warnings \\(1 item\\)/Variable i is never used" | get-property columns -index 0 
        | equals "Variable i is never used" | verify-true
    get-item "Warnings \\(1 item\\)/Variable i is never used" | get-property columns -index 1 | equals "testfile.js" 
        | verify-true
    get-item "Warnings \\(1 item\\)/Variable i is never used" | get-property columns -index 2 
        | equals "/javascript.project/testfolder" | verify-true
    get-item "Warnings \\(1 item\\)/Variable i is never used" | get-property columns -index 3 | equals "line 14" 
        | verify-true
    get-item "Warnings \\(1 item\\)/Variable i is never used" | get-property columns -index 4 
        | equals "JavaScript Problem" | verify-true
}
