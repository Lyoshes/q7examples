Entry-Name: .content
Content-Type: text/ecl

with [get-view "Script Explorer" | get-tree] {
    select "javascript.project/testfolder/testfile.js" | double-click
    select "javascript.project/testfolder/firstfile.js" | double-click
}
with [get-editor "firstfile.js" | get-text-viewer] {
    set-caret-pos 4 2
    key-type Enter
    type-text "function test("
    key-type Right
    type-text "{"
    key-type Enter
    key-type "M1+s"
}
get-editor "firstfile.js" | get-editbox | get-property text | equals "function click(e) {\n"
    + "\t\n"
    + "\t\n}\n"
    + "function test(){\n"
    + "\t\n"
    + "}" | verify-true
with [get-editor "firstfile.js" | get-text-viewer] {
    set-caret-pos 6 1
    type-text " array["
    key-type "M1+s"
}
get-editor "firstfile.js" | get-editbox | get-property text | equals "function click(e) {\n"
    + "\t\n"
    + "\t\n}\n"
    + "function test(){\n"
    + " array[]\t\n"
    + "}" | verify-true
get-preferences-menu | click
with [get-window Preferences] {
    get-tree | select "JavaScript/Editor/Typing"
    get-group "Automatically close" | get-button "(Parentheses),[square] brackets,{braces}" | click
    get-button Apply | click
    get-button OK | click
}
with [get-editor "firstfile.js" | get-text-viewer] {
    set-caret-pos 7 2
    key-type Enter
    type-text "function test("
    key-type Enter
    type-text "{"
    key-type Enter
    type-text "array1["
    key-type "M1+s"
}
get-editor "firstfile.js" | get-editbox | get-property text | equals "function click(e) {\n"
    + "\t\n"
    + "\t\n}\n"
    + "function test(){\n"
    + " array[]\t\n}\n"
    + "function test(\n{\n"
    + "\tarray1[" | verify-true
