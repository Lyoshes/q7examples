------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac
Entry-Name: .content
Content-Type: text/ecl

get-view "Script Explorer" | get-tree | select "javascript.project/testfolder/testfile.js" | double-click
with [get-editor "testfile.js" | get-text-viewer] {
    set-caret-pos 11 3
    key-type Enter
    type-text "var T = \"test"
    key-type Right
    type-text ";"
    key-type Down
    key-type Left -times 2
    key-type BackSpace -times 4
    type-text T
    key-type "M1+s"
}
get-editor "testfile.js" | get-editbox | get-property text | contains "\tvar T = \"test\";\n"
    + "return T; \n"
    + "} \n\n" | verify-true
get-preferences-menu | click
with [get-window Preferences] {
    get-tree | select "JavaScript/Editor/Typing"
    get-group "Automatically close" | get-button "\"Strings\"" | click
    get-button Apply | click
    get-button OK | click
}
with [get-editor "testfile.js" | get-text-viewer] {
    set-caret-pos 12 20
    key-type Enter
    type-text "var R = \"new"
    key-type "M1+s"
}
get-editor "testfile.js" | get-editbox | get-property text | contains "\tvar T = \"test\";\r\n"
    + "\tvar R = \"new\r\n"
    + "return T; \r\n"
    + "} \r\n" | verify-true
with [get-editor "testfile.js" | get-text-viewer] {
    set-caret-pos 13 17
    type-text "\";"
    key-type "M1+s"
}
