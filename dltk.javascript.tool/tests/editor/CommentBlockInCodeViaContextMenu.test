------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac
Entry-Name: .content
Content-Type: text/ecl

get-view "Script Explorer" | get-tree | select "javascript.project/testfolder/testfile.js" | double-click
with [get-editor "testfile.js" | get-text-viewer] {
    set-caret-pos 13 2
    select-range 13 3 10 1
    get-menu "Source/Add Block Comment" | click
    key-type "M1+s"
}
with [get-editor "testfile.js" | get-editbox] {
    get-property text | contains "/*function help(message) \r\n"
        + "{ \r\n"
        + "return true; \r\n"
        + "} */\r\n" | verify-true
    get-property "styles.text" -index 30 | equals "/*function help(message) \r\n"
        + "{ \r\n"
        + "return true; \r\n"
        + "} */" | verify-true
    get-property "styles.fontStyle" -index 30 | equals normal | verify-true
    get-property "styles.foregroundColor" -index 30 | equals "#3F7F5F" | verify-true
}
with [get-editor "testfile.js" | get-text-viewer] {
    set-caret-pos 12 5
    select-range 13 5 9 1
    get-menu "Source/Remove Block Comment" | click
}
get-button "Save (M1+S)" | click
get-editor "testfile.js" | get-editbox | get-property text | contains "/*function help(message) \r\n"
        + "{ \r\n"
        + "return true; \r\n"
        + "} */\r\n" | verify-false
