------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac
Entry-Name: .content
Content-Type: text/ecl

get-view "Script Explorer" | get-tree | select "javascript.project/testfolder/testfile.js" | double-click
with [get-editor "testfile.js"] {
    with [get-text-viewer] {
        set-caret-pos 1 22
        key-type Del
        key-type "M1+s"
    }
    get-left-ruler | hover-ruler -line 1
}
get-window -from "Information Window" | get-editbox | get-property text | equals "Mismatched input {, ) expected" 
    | verify-true
with [get-view Problems | get-tree] {
    get-property itemCount | equals 1 | verify-true
    get-item "Errors \\(1 item\\)" | get-property caption | equals "Errors (1 item)" | verify-true
    get-item "Errors \\(1 item\\)" | get-property childCount | equals 1 | verify-true
    get-item "Errors \\(1 item\\)/Mismatched input {, \\) expected" | get-property caption 
        | equals "Mismatched input {, ) expected" | verify-true
    get-item "Errors \\(1 item\\)/Mismatched input {, \\) expected" | get-property columns -index 0 
        | equals "Mismatched input {, ) expected" | verify-true
    get-item "Errors \\(1 item\\)/Mismatched input {, \\) expected" | get-property columns -index 1 
        | equals "testfile.js" | verify-true
    get-item "Errors \\(1 item\\)/Mismatched input {, \\) expected" | get-property columns -index 2 
        | equals "/javascript.project/testfolder" | verify-true
    get-item "Errors \\(1 item\\)/Mismatched input {, \\) expected" | get-property columns -index 3 | equals "line 1" 
        | verify-true
    get-item "Errors \\(1 item\\)/Mismatched input {, \\) expected" | get-property columns -index 4 
        | equals "JavaScript Problem" | verify-true
}
