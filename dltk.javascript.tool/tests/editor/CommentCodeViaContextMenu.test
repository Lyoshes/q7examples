------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac
Entry-Name: .content
Content-Type: text/ecl

get-view "Script Explorer" | get-tree | select "javascript.project/testfolder/testfile.js" | double-click
with [get-editor "testfile.js" | get-text-viewer] {
    hover-text 15 20
    set-caret-pos 12 1
    get-menu "Source/Comment" | click
}
with [get-editor "testfile.js" | get-editbox] {
    get-property text | contains "//return true; \n" | verify-true
    get-property "styles.text" -index 36 | equals "//return true; \r\n" | verify-true
    get-property "styles.fontStyle" -index 36 | equals normal | verify-true
    get-property "styles.foregroundColor" -index 36 | equals "#3F7F5F" | verify-true
}
with [get-editor "testfile.js" | get-text-viewer] {
    set-caret-pos 12 4
    get-menu "Source/Uncomment" | click
}
get-button "Save (M1+S)" | click
with [get-editor "testfile.js" | get-editbox] {
    get-property text | contains "//return true; \n" | verify-false
    get-property "styles.text" -index 36 | equals return | verify-true
    get-property "styles.fontStyle" -index 36 | equals bold | verify-true
    get-property "styles.foregroundColor" -index 36 | equals "#7F0055" | verify-true
    get-property "styles.text" -index 38 | equals true | verify-true
    get-property "styles.fontStyle" -index 38 | equals bold | verify-true
    get-property "styles.foregroundColor" -index 38 | equals "#7F0055" | verify-true
}
