    + "\tnortime += ( (hours > 12) ? hours - 12 : hours)\n"
    + "\tnortime += ( (minutes < 10) ? \":0\" : \":\") + minutes\n"
    + "\tnortime += ( (seconds < 10) ? \":0\" : \":\") + seconds\n"
    + "\tnortime += (hours >= 12) ? \"test1\" : \"test2\"\n"
    + "\tvar msg = \"Test text\" + nortime + \"                                                 \";\n\n"
    + "\tif (position++ == msg.length) {\n"
    + "\t\tif (numofloop-- < 2) return;\n"
    + "\t\tposition = 0;\n"
    + "\t}\n"
