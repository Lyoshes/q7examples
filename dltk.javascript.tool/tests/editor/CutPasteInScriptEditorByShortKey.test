------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac
Entry-Name: .content
Content-Type: text/ecl

get-view "Script Explorer" | get-tree | select "new.project/creationbutton.js" | double-click
with [get-editor "creationbutton.js" | get-text-viewer] {
    set-caret-pos 9 5
    hover-text 9 7
    key-type "M1+a"
    key-type "M1+x"
    set-caret-pos 1 1
}
get-view "Script Explorer" | get-tree | select "new.project" | get-menu "New/New JavaScript File" | click
with [get-window "Create Javascript file"] {
    get-editbox -after [get-label "Name:"] | set-text test
    get-button Finish | click
}
with [get-editor "test.js" | get-text-viewer] {
    key-type "M1+v"
    key-type "M1+M2+s"
}
get-editor "test.js" | get-editbox | get-property text | equals "var position=0\n"
    + "var numofloop=10\n"
    + "function banner()  {    \n"
    + "var nor = new Date() \n"
    + "var minutes = nor.getMinutes() \n"
    + "var hours = nor.getHours() \n"
    + "var seconds = nor.getSeconds() \n"
    + "var nortime = \"Test\" \n"
    + "nortime += ((hours > 12) ? hours - 12 : hours) \n"
    + "nortime += ((minutes < 10) ? \":0\" : \":\") + minutes \n"
    + "nortime += ((seconds < 10) ? \":0\" : \":\") + seconds \n"
    + "nortime += (hours >= 12) ? \"test1\" : \"test2\" \n"
    + "var msg=\"Test text\" + nortime + \"                                                 \";\n\n"
    + "if  (position++==msg.length)  {\n"
    + "if  (numofloop-- < 2) return;\n"
    + "position=0;\n}\n"
    + "}" | verify-true
get-editor "creationbutton.js" | click
get-editor "creationbutton.js" | get-editbox | get-property text | equals "" | verify-true
