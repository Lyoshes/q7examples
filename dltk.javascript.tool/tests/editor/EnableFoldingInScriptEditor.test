------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac
Entry-Name: .content
Content-Type: text/ecl

get-view "Script Explorer" | get-tree | select "javascript.project/testfolder/testfile.js" | double-click
with [get-editor "testfile.js" | get-text-viewer] {
    hover-text 10 12
    key-type "M1+M2+NUMPAD_DIVIDE" 
}
get-editor "testfile.js" | get-editbox | get-property text | equals "function closewindow() {\n\n"
    + "function help(message) \n\n"
    + "function checkField(field)" | verify-true
get-preferences-menu | click
with [get-window Preferences] {
    get-tree | select "JavaScript/Editor/Folding"
    get-button "Enable folding" | click
    get-button Apply | click
    get-button OK | click
}
with [get-editor "testfile.js" | get-text-viewer] {
    hover-text 10 12
    key-type "M1+M2+NUMPAD_DIVIDE" 
}
get-editor "testfile.js" | get-editbox | get-property text | equals "function closewindow() {\n"
    + "\tif (document.all) {\n"
    + "\t\tdocument.all.orderwindow.style.visibility=\"hidden\"\n"
    + "\t}\n"
    + "\tif (document.layers) {\n"
    + "\t\tdocument.orderwindow.visibility=\"hidden\"\n"
    + "\t}\n}\n\n"
    + "function help(message) \n"
    + "{ \n"
    + "return true; \n"
    + "} \n\n"
    + "function checkField(field) \n"
    + "{ \n"
    + "if (field.value == \"\") \n"
    + "help(\"Test Fields\"); \n"
    + "else \n"
    + "help(\"\"); \n"
    + "return true; \n"
    + "}" | verify-true
