Entry-Name: .content
Content-Type: text/ecl

get-view "Script Explorer" | get-tree | select "javascript.project/testfolder/testfile.js" | double-click
with [get-editor "testfile.js" | get-text-viewer] {
    set-caret-pos 10 6
    select-range 10 1 10 9
}
get-editor "testfile.js" | get-editbox | get-property "getSelectionText()" | equals function | verify-true
with [get-editor "testfile.js" | get-text-viewer] {
    set-caret-pos 15 1
    select-range 15 1 16 1
}
get-editor "testfile.js" | get-editbox | get-property "getSelectionText()" | equals "function checkField(field)" 
    | verify-true
with [get-editor "testfile.js" | get-text-viewer] {
    hover-text 17 7
    set-caret-pos 17 11
    key-type "M2+End"
    set-caret-pos 17 23
    select-range 17 11 17 23
    hover-text 15 15
}
get-editor "testfile.js" | get-editbox | get-property "getSelectionText()" | equals "value == \"\")" | verify-true
with [get-editor "testfile.js" | get-text-viewer] {
    set-caret-pos 18 10
    key-type "M2+Home"
    set-caret-pos 18 1
    select-range 18 10 18 1
}
get-editor "testfile.js" | get-editbox | get-property "getSelectionText()" | equals "help(\"Tes" | verify-true
