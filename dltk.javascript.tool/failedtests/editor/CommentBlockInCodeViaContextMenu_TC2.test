------=_.content-0a7243a0-75d3-3d5f-9791-539de0e5b7ac
Entry-Name: .content
Content-Type: text/ecl

get-view "Script Explorer" | get-tree | select "new.project/creationbutton.js" | double-click
with [get-editor "creationbutton.js" | get-text-viewer] {
    set-caret-pos 7 1
    hover-text 9 7
    get-menu "Source/Comment" | click
    key-type "M1+s"
    set-caret-pos 7 2
    select-range 7 1 11 22
    get-menu "Source/Add Block Comment" | click
    key-type "M1+s"
}
get-editor "creationbutton.js" | get-editbox | get-property text | contains "/*//var nor = new Date() \r\n"
    + "var minutes = nor.getMinutes() \r\n"
    + "var hours = nor.getHours() \r\n"
    + "var seconds = nor.getSeconds() \r\n"
    + "var nortime = \"Test\" */\r\n" | verify-true
